{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/dictionary",
      "dest": "/client/pages/dictionary.html"
    },
    {
      "src": "/education",
      "dest": "/client/pages/education.html"
    },
    {
      "src": "/word-details",
      "dest": "/client/pages/word-details.html"
    },
    {
      "src": "/",
      "dest": "/client/pages/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/pages/$1"
    }
  ]
}
